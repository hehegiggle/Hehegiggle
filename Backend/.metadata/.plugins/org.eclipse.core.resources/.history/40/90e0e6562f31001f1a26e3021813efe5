	public void sendTestEmail(String to) {
		try {
			MimeMessage mimeMessage = javaMailSender.createMimeMessage();
			MimeMessageHelper helper = new MimeMessageHelper(mimeMessage, true);

			helper.setTo(to);
			String subject = "Welcome to HeHe Giggle! üéâ";
			String emailBody = "Hey User,\n\n"
					+ "Welcome to HeHe Giggle! You're officially part of our vibrant community where you can share epic fails, life updates, and more with the world. Get ready for some fun! üéâüåü\n\n"
					+ "To get started, log in with your credentials and start exploring.\n\n"
					+ "If you have any questions or need assistance, feel free to reach out to our support team.\n\n"
					+ "Stay awesome and keep on posting!\n\n" + "Cheers,\n" + "From Team HeHe Giggle!!!";

			helper.setSubject(subject);
			helper.setText(emailBody, true);

			javaMailSender.send(mimeMessage);
		} catch (MessagingException e) {
			e.printStackTrace();
		}
	}
}